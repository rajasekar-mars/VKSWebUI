# Production Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://vksuser:your_secure_password_here@localhost/vkswebui
DB_HOST=localhost
DB_NAME=vkswebui
DB_USER=vksuser
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Flask Configuration
FLASK_ENV=production
FLASK_APP=backend/app.py
SECRET_KEY=your_super_secret_key_here_change_this

# Security
CORS_ORIGINS=https://littlesonagrofoods.com,https://www.littlesonagrofoods.com

# FTP Configuration
FTP_HOST=your-server-ip
FTP_USER=dairyftp
FTP_PASSWORD=dairy_secure_password
FTP_UPLOAD_DIR=/home/dairyftp/uploads

# File Upload Settings
UPLOAD_FOLDER=/var/www/vkswebui/uploads
MAX_CONTENT_LENGTH=104857600  # 100MB

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/vkswebui/logs/app.log